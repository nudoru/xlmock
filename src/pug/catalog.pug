include _mixins.pug

doctype html
include includes/_head
body

.l-site-container
  include includes/_header

  .l-site-content

    .c-item-table
      .c-item-table__title
        h1 Learning Paths in Progress
      .c-item-table__filters
        button Recent
          +icon-chevron-down("icon-button-right")
        ul
          li
            a(href='404.pug') 
              +icon-grid
          li 
            a(href='404.pug') 
              +icon-list
      - var n = 0;
      .c-item-table__contents
        while n < 10
          .c-item-table__row
            .c-item-table__row__content
              h1 Nulla ut felis vitae mauris lobortis euismod quis sodales enim
              ul.c-content-metadata
                li
                  span.c-tag Infrastructure
                li.c-content-metadata__icon
                  +icon-box("content-icon")
                li.c-content-metadata__type Learning Path
                li 4 hours left
                li
                  +icon-mobile
            .c-item-table__row__cta
              button.primary Resume
          .c-item-table__row
            .c-item-table__row__content
