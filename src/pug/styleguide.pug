  .site-content

    .l-card-grid
      .c-card-grid__title
        h1 Card Grid
      .c-card-grid__filters
        button Recent
          +icon-chevron-down("icon-button-right")
        ul
          li
            a(href='404.pug') 
              +icon-grid
          li 
            a(href='404.pug') 
              +icon-list
      .c-card-grid__contents
        .c-card-grid__cell
          .c-card.c-card--path
            .c-card__contents
              .c-card__icon
                +icon-box
              .c-card__duration # hours left
              .c-card__content
